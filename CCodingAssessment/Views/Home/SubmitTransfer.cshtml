@model CCodingAssessment.Models.ViewModels.TransferViewModel


@{
    ViewData["Title"] = "Home Page";
}

<form asp-controller="Home" asp-action="SubmitTransfer" method="post">

    <div class="layout-grid">
        @Html.AntiForgeryToken()
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="info-grid">
            <div class="title">
                <h4>PROVIDING AGENCY INFORMATION</h4>
            </div>
            <div class="icon">
                <img src="~/icons/company.svg" alt="" />
            </div>
            <div class="form light-grey">
                <input asp-for="@Model.ProvidingAgency.AgentName" class="initial-style" placeholder="Providing Agent Name" />
                <span asp-validation-for="@Model.ProvidingAgency.AgentName" class="text-danger"></span>

                <input asp-for="@Model.ProvidingAgency.Date" class="form-control" type="text" placeholder="TODAY" />
                <span asp-validation-for="@Model.ProvidingAgency.Date" class="text-danger"></span>

                <input asp-for="@Model.ProvidingAgency.Agency" class="initial-style" placeholder="Providing Agency" />
                <span asp-validation-for="@Model.ProvidingAgency.Agency" class="text-danger"></span>


                <input asp-for="@Model.ProvidingAgency.PhoneNumber" value="" class="initial-style" placeholder="Mobile Number" />
                <span asp-validation-for="@Model.ProvidingAgency.PhoneNumber" class="text-danger"></span>

                <div class="location-group">
                    <div class="city">
                        <select asp-for="@Model.ProvidingAgency.City" class="dropdown">
                            <option value="" disabled selected>City</option>
                        </select>
                        <span asp-validation-for="@Model.ProvidingAgency.City" class="text-danger"></span>
                    </div>
                    <div class="state">
                        <select asp-for="@Model.ProvidingAgency.State" class="dropdown">
                            <option value="" disabled selected>State</option>
                        </select>
                        <span asp-validation-for="@Model.ProvidingAgency.State" class="text-danger"></span>
                    </div>
                    <div class="county">
                        <select asp-for="@Model.ProvidingAgency.County" class="dropdown" name="county">
                            <option value="" disabled selected>County</option>
                        </select>
                        <span asp-validation-for="@Model.ProvidingAgency.County" class="text-danger"></span>
                    </div>
                </div>
                

            </div>
        </div>
        <div class="info-grid">
            <div class="title">
                <h4>JAIL INFORMATION</h4>
            </div>
            <div class="icon">
                <img src="~/icons/handcuffs.svg" alt="" />
            </div>
            <div class="form light-yellow">

                <input asp-for="@Model.Jail.Name" placeholder="Jail Name" />
                <span asp-validation-for="@Model.Jail.Name" class="text-danger"></span>

                <div class="location-group">
                    <div class="city">
                        <select asp-for="@Model.Jail.City" class="dropdown">
                            <option value="" disabled selected>City</option>
                        </select>
                        <span asp-validation-for="@Model.Jail.City" class="text-danger"></span>
                    </div>

                    <div class="state">
                        <select asp-for="@Model.Jail.State" class="dropdown">
                            <option value="" disabled selected>State</option>
                        </select>
                        <span asp-validation-for="@Model.Jail.State" class="text-danger"></span>
                    </div>

                    <div class="county">
                        <select asp-for="@Model.Jail.County" class="dropdown">
                            <option value="" disabled selected>County</option>
                        </select>
                        <span asp-validation-for="@Model.Jail.County" class="text-danger"></span>
                    </div>
                </div>

            </div>
        </div>
        <div class="info-grid">

            <div class="title">
                <h4>BOND TRANSFER INFORMATION</h4>
            </div>
            <div class="icon">
                <img src="~/icons/certificate.svg" alt="" />
            </div>
            <div class="form light-grey">

                <input asp-for="@Model.Bond.Amount" placeholder="Bond Amount" />
                <span asp-validation-for="@Model.Bond.Amount" class="text-danger"></span>

                <select asp-for="@Model.Bond.SerialNumber" class="dropdown">
                    <option value="" disabled selected>Serial Number</option>
                    <option value="1">10118500-151084108</option>
                    <option value="2">10118500-151084108</option>
                </select>
                <span asp-validation-for="@Model.Bond.SerialNumber" class="text-danger"></span>
                
            </div>

        </div>
        <div class="info-grid">
            <div class="title">
                <h4>REQUESTING AGENCY INFORMATION</h4>
            </div>
            <div class="icon">
                <img src="~/icons/suites.svg" alt="" />
            </div>
            <div class="form light-yellow">
                <input asp-for="@Model.RequestingAgency.Name" placeholder="Requesting Agency" />
                <span asp-validation-for="@Model.RequestingAgency.Name" class="text-danger"></span>

                <input asp-for="@Model.RequestingAgency.PhoneNumber" placeholder="Mobile Number" />
                <span asp-validation-for="@Model.RequestingAgency.PhoneNumber" class="text-danger"></span>
                       
                <div class="location-group">
                    <div class="city">
                        <select asp-for="@Model.RequestingAgency.City" class="dropdown">
                            <option value="" disabled selected>City</option>
                        </select>
                        <span asp-validation-for="@Model.RequestingAgency.City" class="text-danger"></span>
                    </div>
                    <div class="state">
                        <select asp-for="@Model.RequestingAgency.State" class="dropdown" name="state">
                            <option value="" disabled selected>State</option>
                        </select>
                        <span asp-validation-for="@Model.RequestingAgency.State" class="text-danger"></span>
                    </div>
                    <div class="county">
                        <select asp-for="@Model.RequestingAgency.County" class="dropdown" name="county">
                            <option value="" disabled selected>County</option>
                        </select>
                        <span asp-validation-for="@Model.RequestingAgency.County" class="text-danger"></span>
                    </div>
                </div>

            </div>
        </div>
        <div class="info-grid">
            <div class="title">
                <h4>DEFENDANT INFORMATION</h4>
            </div>
            <div class="icon">
                <img src="~/icons/profile-light-green.svg" alt="" />
            </div>
            <div class="form light-green">
                <input asp-for="@Model.Defendant.LastName" placeholder="Last" />
                <span asp-validation-for="@Model.Defendant.LastName" class="text-danger"></span>

                <input asp-for="@Model.Defendant.FirstName" placeholder="First" />
                <span asp-validation-for="@Model.Defendant.FirstName" class="text-danger"></span>

                <input asp-for="@Model.Defendant.DOB" placeholder="DOB" />
                <span asp-validation-for="@Model.Defendant.DOB" class="text-danger"></span>

                <input asp-for="@Model.Defendant.SSN" placeholder="SSN" />
                <span asp-validation-for="@Model.Defendant.SSN" class="text-danger"></span>

                <button class="submit-btn submit-btn-small semi-bold">GO!</button>
            </div>
        </div>
        <div class="info-grid">
            <div class="title">
                <h4>INDEMNITOR INFORMATION</h4>
            </div>
            <div class="icon">
                <img src="~/icons/profile-light-gold.svg" alt="" />
            </div>
            <div class="form light-yellow">
                <div class="grid-group">
                    <input asp-for="@Model.Indemnitor.FirstName" placeholder="First Name" />
                    <span asp-validation-for="@Model.Indemnitor.FirstName" class="text-danger"></span>
                </div>

                <div class="grid-group">
                    <input asp-for="@Model.Indemnitor.MiddleName" placeholder="Middle" />
                    <span asp-validation-for="@Model.Indemnitor.MiddleName" class="text-danger"></span>
                </div>

                <div class="grid-group">
                    <input asp-for="@Model.Indemnitor.LastName" placeholder="Last Name" />
                    <span asp-validation-for="@Model.Indemnitor.LastName" class="text-danger"></span>
                </div>

                <div class="grid-group">
                    <input asp-for="@Model.Indemnitor.AliasName" placeholder="Alias" />
                    <span asp-validation-for="@Model.Indemnitor.AliasName" class="text-danger"></span>
                </div>

                <div class="grid-group">
                    <input asp-for="@Model.Indemnitor.DOB" placeholder="Date Of Birth" />
                    <span asp-validation-for="@Model.Indemnitor.DOB" class="text-danger"></span>
                </div>

                <div class="grid-group">
                    <select asp-for="@Model.Indemnitor.Gender" class="dropdown">
                        <option value="" disabled selected>Gender</option>
                        <option value="male">Male</option>
                        <option value="female">Female</option>
                    </select>
                    <span asp-validation-for="@Model.Indemnitor.Gender" class="text-danger"></span>
                </div>

                <div class="grid-group">
                    <select asp-for="@Model.Indemnitor.Ethnicity" class="dropdown">
                        <option value="" disabled selected>Ethnicity</option>
                        <option value="hispanic">Hispanic or Latino</option>
                        <option value="nonhispanic">Not Hispanic or Latino</option>
                    </select>
                    <span asp-validation-for="@Model.Indemnitor.Ethnicity" class="text-danger"></span>
                </div>

                <div class="grid-group">
                    <input asp-for="@Model.Indemnitor.SSN" placeholder="Social Security" />
                    <span asp-validation-for="@Model.Indemnitor.SSN" class="text-danger"></span>
                </div>

                <div class="grid-group">
                    <input asp-for="@Model.Indemnitor.EmailAddress" placeholder="Email Address" />
                    <span asp-validation-for="@Model.Indemnitor.EmailAddress" class="text-danger"></span>
                </div>

                <div class="grid-group">
                    <input asp-for="@Model.Indemnitor.PhoneNumber" placeholder="Mobile Phone" />
                    <span asp-validation-for="@Model.Indemnitor.PhoneNumber" class="text-danger"></span>
                </div>

            </div>
        </div>
        <div class="info-grid">
            <div class="title">
                <h4>ADDITIONAL INFORMATION (Holds, Immigration)</h4>
            </div>
            <div class="icon">
                <img src="~/icons/warning.svg" alt="" />
            </div>
            <div class="form light-red">
                <input asp-for="@Model.AdditionalInformation" />
                <span asp-validation-for="@Model.AdditionalInformation" class="text-danger"></span>

            </div>
        </div>
        <div class="terms-grid">
            <div class="agree-box">
                <label class="custom_checkbox_container">
                    <input type="checkbox" asp-for="@Model.AgreedToTerms" required="required">

                    <span class="checkmark"></span>
                </label>
            </div>
            <div class="terms">
                <p>
                    “Disclaimer: The above named Requesting Agency has requested that Palmetto Surety Corporation
                    cause be executed and posted a bail bond(s) commonly known as a Transfer Bond(s). Palmetto Surety
                    Corporation has honored that request.
                </p>
                <p>
                    Upon honoring this request, it should be known that the Requesting Agency holds full liability and
                    responsibility to the described defendant(s). This shall constitute but not be limited to ensuring
                    defendant appearance, maintain track of the defendant’s case, working with the defendant to receive all
                    court notifications, and any costs/fees/loss incurred as a result of the forfeiture of the said defendant(s).
                    Failure of the Posting Agent to notify Palmetto Surety Corporation/Requesting Agency of court
                    communications is not causing the Requesting Agency to bypass liability/responsibility of said
                    defendant(s).
                </p>
                <p>
                    By accepting these terms, Requesting Agency (liable agent) does hereby accept all liability for said
                    Transfer Bond(s)(identified above) under the terms of their Palmetto Surety Corporation Bail Bond
                    Agreement (liable contract). Requesting Agency, as agreed prior to the posting of the said bond(s), will
                    pay the above-listed fees for this service.”
                </p>
            </div>
        </div>
        <div class="container text-center">
            <div class="row">
                <div class="col">
                    <button type="submit" class="submit-btn submit-btn-large bold">SUBMIT</button>
                </div>
            </div>
            <div class="row justify-content-center">
                <div class="col-md-5 col-sm-12">
                    <hr />
                </div>
            </div>
            <div class="row justify-content-center">
                <div class="col-md-4 col-sm-8">
                    <img class="d-block w-100 h-100" src="~/icons/guarentee_logo.jpg" alt="" />
                </div>
            </div>
        </div>
    </div>
</form>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}